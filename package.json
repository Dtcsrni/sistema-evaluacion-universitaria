{
  "name": "sistema-evaluacion-universitaria",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["apps/backend", "apps/frontend", "apps/portal_alumno_cloud"],
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "docker compose --profile dev up --build mongo_local api_docente_local",
    "dev:frontend": "npm --prefix apps/frontend run dev",
    "dev:portal": "npm --prefix apps/portal_alumno_cloud run dev",
    "test": "npm --prefix apps/backend run test",
    "test:backend": "npm --prefix apps/backend run test",
    "test:portal": "npm --prefix apps/portal_alumno_cloud run test",
    "test:frontend": "npm --prefix apps/frontend run test",
    "build": "npm run --workspaces --if-present build",
    "lint": "npm run --workspaces --if-present lint",
    "start": "docker compose --profile prod up --build mongo_local api_docente_prod",
    "start:portal": "npm --prefix apps/portal_alumno_cloud run start",
    "status": "node scripts/dashboard.mjs"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^24.0.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "mongodb-memory-server": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.3.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  }
}


